{{> header}}
<div class="table-wrapper">
        {{#if noobs}}
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">AvailStart</th>
                        <th scope="col">AvailEnd</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each noobs}}
                        <tr>
                            <th scope="row">{{_id}}</th>
                            <td>{{name}}</td>
                            <td>{{availStart}}</td>
                            <td>{{availEnd}}</td>
                            <td>
                                <a href="/edit/{{_id}}" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/{{_id}}" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{#else}}
            <p class="text-center">No noobs found. Go <a href="/add" >here</a> to add noobs.</p>
        {{/else}}
        {{/if}}
    </div>
</div>
</body>
</html>